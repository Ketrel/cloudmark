<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{%TITLE%}</title>
        <!-- Bootstrap core CSS -->
        <link href="{%TEMPLATE%}/css/bootstrap.css" rel="stylesheet" />
        <link href="{%TEMPLATE%}/css/footer.css" rel="stylesheet" />
        <!-- Font Awesome -->
        <link href="{%TEMPLATE%}/css/font-awesome.css" rel="stylesheet" />
        <!-- JQuery -->
        <script src="{%TEMPLATE%}/js/jquery-min.js" type="text/javascript"></script>
        <!-- Bootstrap JS -->
        <script src="{%TEMPLATE%}/js/bootstrap.js" type="text/javascript"></script>
    </head>
    <body>
{%INCLUDE:inc-navbar%}
        <br />
        <div id="main" class="container-fluid">
{%IF:BREADCRUMBS%}
            <div class="breadcrumb">
                {%BREADCRUMBS%}
            </div>
{%ENDIF:BREADCRUMBS%}
{%IF:SEARCHSTRING%}
            <div class="alert alert-warning">
                <strong>Search Results</strong>: Showing results for '{%SEARCHSTRING%}'
                <span class="pull-right">
                    <a href="{%SEARCHUNDO%}" class="close">&times;</a>
                </span>
            </div>    
{%ENDIF:SEARCHSTRING%}
{%IF:CATEGORIES%}
            <div class="container-fluid bg-faded p-3 rounded">
                <h3>Categories{%IF:CATEGORY%} - {%CATEGORY%}{%ENDIF:CATEGORY%}</h3>
                <div class="card-deck" id="categories">
{%FOREACH:CATEGORIES%}
                </div>
            </div>
{%ENDIF:CATEGORIES%}
{%IF:LINKS%}
            <div class="container-fluid bg-faded p-2 rounded">
                <h3>Links</h3>
                <div class="card-deck" id="links">
                    <div class="card">
                        <div class="card-block">
                            <ul class="mb-0">
{%FOREACH:LINKS%}
                            </ul>
                        </div>
                    </div>
{%IF:LINKS2%}
                    <div class="card">
                        <div class="card-block">
                            <ul class="mb-0">
{%FOREACH:LINKS2%}
                            </ul>
                        </div>
                    </div>
{%ENDIF:LINKS2%}
                </div>
{%IF:PAGINATION%}
                <br />
                <ul class="pagination justify-content-center">
{%FOREACH:PAGINATION%}
                </ul>
{%ENDIF:PAGINATION%}
            </div>
{%ENDIF:LINKS%}
        </div>
{%IF:FOOTER%}
        <div class="footer small text-white" style="background: #686868;">
            {%FOOTER%}
        </div>
{%ENDIF:FOOTER%}
    </body>
</html>
