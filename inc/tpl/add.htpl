<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{%TITLE%}</title>
        <!-- Bootstrap core CSS -->
        <link href="./inc/css/bootstrap/4.0.0/bootstrap.css" rel="stylesheet">
        <link href="./inc/css/footer.css" rel="stylesheet">
        <!-- JQuery -->
        <script src="./inc/js/jquery/3.2.1/jquery-min.js" type="text/javascript"></script>
        <!-- Bootstrap JS -->
        <script src="./inc/js/bootstrap/4.0.0/bootstrap.js" type="text/javascript"></script>
    </head>
    <body>
{%INCLUDE:inc-navbar%}
        <br />
        <div id="main" class="container bg-faded rounded p-3">
{%IF:FORM%}
            <form action="." method="get">
                <div class="row">
                    <div class="form-group col">
                        <label for="title">Link Title</label>
                        <input class="form-control" type="text" id="title" name="title" />
                        <br />               
                        <label for="url">URL</label>
                        <input class="form-control" type="url" id="url" name="url" />
                        <br />               
                        <label for="comment">Comment</label>
                        <input class="form-control" type="text" id="comment" name="comment" placeholder="Optional Comment..." />
                    </div>
                    <div class="form-group col">
                        <label for="cats">Categories</label>
                        <!--<select multiple class="form-control" id="cats" name="cats" size="15">-->
                        <select class="form-control" id="cats" name="cats" size="15">
{%FORM%}
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
{%ENDIF:FORM%}
        </div>
{%IF:FOOTER%}
        <div class="footer small text-white" style="background: #686868;">
            {%FOOTER%}
        </div>
{%ENDIF:FOOTER%}
    </body>
</html>
